<h1>
    <span class="far fa-list-alt"></span> Snippets
</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Code Preview</th>
      <th scope="col">Created</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{truncate this.codeContent}}</td>
      <td>{{this.createdAt}}</td>
      <td><a href="./{{this.id}}/snippetfullview">view</a></td>
    </tr>
    {{/each}}
    {{else}}
    <tr colspan="2">
      <td class="text-center">No snippets to display.</td>
    </tr>
  {{/if}}
  </tbody>
</table>
