<div class="registerContainer">
			<form class="form-horizontal" action='./createUser' method="POST">
			{{>validationSummary}}
			  <fieldset>
			    <div id="legend">
			      <legend class="">Register</legend>
			    </div>
			    <div class="control-group">
			      <!-- Username -->
			      <div class="controls">
			        <input type="text" id="username" name="username" placeholder="Username" class="input-xlarge">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Password-->
			      <div class="controls">
			        <input type="password" id="password" name="password" placeholder="Password" required="required"><br>
							<input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required="required">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Button -->
			      <div class="controls">
			        <button class="btn btn-success register">Register</button>
			      </div>
			    </div>
			  </fieldset>
			</form>
</div>