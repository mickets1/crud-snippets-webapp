<div class="loginContainer">
			<form method="post" action="./login">
			{{>validationSummary}}
			    <div id="legend">
			      <legend class="">Login</legend>
			    </div>
			    <div class="control-group">
			      <!-- Username -->
			      <label class="control-label"  for="username">Username</label>
			      <div class="controls">
			        <input type="text" id="username" name="username" value="{{username}}" placeholder="Username" required="required" class="input-xlarge">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Password-->
			      <label class="control-label" for="password">Password</label>
			      <div class="controls">
			        <input type="password" id="password" name="password" value="{{password}}" placeholder="Password" required="required" class="input-xlarge">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Button -->
			      <div class="controls">
			        <button class="btn btn-success">Login</button>
							<a href="./register"><div class="btn btn-success">Register</div></a>
			      </div>
			    </div>
			  </fieldset>
			</form>
</div>